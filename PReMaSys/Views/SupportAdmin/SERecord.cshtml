@model PReMaSys.Models.SalesUser

@{
    ViewData["Title"] = "SERecord";
     Layout = "~/Views/Shared/SupportAdminDash.cshtml";
}
<div>
    <h5 class="text-success">@TempData["ResultMessage"]</h5>
    <h5 class="text-danger">@TempData["ResultMessage2"]</h5>
</div>


<div class="container">
    <div class="container" style="border:outset; border-radius:10px; padding:20px; width:50%">
        <div>
            Excel upload in a database refers to the process of importing a large quantity of data from an Excel file into the database all at once,
            enabling efficient and convenient data insertion. It allows users to quickly and easily populate the database with multiple records from an Excel spreadsheet,
            streamlining data entry tasks.
        </div>
        <br />
        <div>
            Downloadable Template: <a href="https://docs.google.com/spreadsheets/d/1D4t7YgdeoJmfBJi0vP6YOXxVh5u6mnmH/export?format=xlsx" download>Sales Employee List Template</a>
        </div>

        <h1 class="text-center mt-5 mb-5">Upload Excel</h1>
        <h5 class="text-success">@TempData["ResultMessage"]</h5>
        <form asp-action="UploadExcel" asp-controller="SupportAdmin" enctype="multipart/form-data">
            <div class="form-group mb-3 mt-3">
                <label for="fileInput" class="form-label">Select Excel File:</label>
                <input type="file" name="file" id="fileInput" class="form-control" required />
            </div>
            <div class="form-group mb-3 mt-4">
                <input type="submit" value="Upload File" class="btn btn-primary" required />
                <a asp-action="ListSalesEmployee" class="btn btn-outline-secondary">Back to SERecord</a>
            </div>
        </form>
    </div>

  <h1 class="text-center mt-5 mb-5">Sales Employee Credentials</h1>
    <h5 class="text-success">@TempData["ResultMessage"]</h5><h5 class="text-danger">@TempData["ResultMessage2"]</h5>
        <form asp-action="SERecord" class="se-record-form" asp-controller="SupportAdmin" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeNo" placeholder="EmployeeNo" class="form-control" required />
                <span asp-validation-for="EmployeeNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeFirstname" placeholder="EmployeeFirstname" class="form-control" required />
                <span asp-validation-for="EmployeeFirstname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeLastname" placeholder="EmployeeLastname" class="form-control" required />
                <span asp-validation-for="EmployeeLastname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeAddress" placeholder="EmployeeAddress" class="form-control" required/>
                <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeBirthdate" type="date" placeholder="EmployeeBirthdate" class="form-control" required />
                <span asp-validation-for="EmployeeBirthdate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="Email" placeholder="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
@*            <div class="form-group mb-3">
                @*<label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" required/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>*@
            <div class="form-group mb-3 mt-4">
                <input type="submit" value="Employee Record" class="btn btn-success" required />
                  <a asp-action="ListSalesEmployee" class="btn btn-outline-success">Back to List</a>
            </div>
           
        </form>

</div>
