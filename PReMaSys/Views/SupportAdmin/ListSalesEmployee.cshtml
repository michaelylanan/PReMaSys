@model IEnumerable<PReMaSys.Data.ApplicationUser>
@{
    ViewData["Title"] = "List Sales Employee";
     Layout = "~/Views/Shared/SupportAdminDash.cshtml";
}

<h1 class="text-center mt-5">Sales Employee List </h1>

<div class="ms-5 mt-5">
 <a asp-action="SERecord" asp-controller="SupportAdmin" class="btn btn-success p-2 mb-3">Add New Sales Employee + </a>
 <a asp-action="EmployeeRole" asp-controller="SupportAdmin" class="btn btn-success p-2  mb-3">Assign Role</a>
</div>

@if (Model.Any())
{
    foreach (var user in Model)
    {
      <div class="px-5 mt-3">
        <div class="card">
            <div class="card-header">
                User Id :@user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteSLC" asp-route-id="@user.Id" method="post">
                    <a asp-controller="SupportAdmin" asp-action="EditSalesLC" asp-route-id="@user.Id" class="btn btn-outline-success">Edit</a>
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
        </div>
      </div>
    }
    <a asp-action="SupportPage" class="btn btn-outline-success ms-5 mt-5">Back to List</a>
}

