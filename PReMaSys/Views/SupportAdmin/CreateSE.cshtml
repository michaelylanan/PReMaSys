@model Testertest.Models.SalesEmployeeRecord

@{
    ViewData["Title"] = "CreateSE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Create</h1>

<h4 class="text-center mb-4">SalesEmployeeRecord</h4>
<hr />

        <form asp-action="CreateSE" class="create-se-form mt-5"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
        @* <label asp-for="EmployeeNo" class="control-label"></label>*@
                <input asp-for="EmployeeNo" placeholder="Employee No." class="form-control" />
                <span asp-validation-for="EmployeeNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmployeePicture" class="control-label"Employee Picture:></label>
                <input asp-for="EmployeePicture" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="EmployeePicture" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="EmployeeUsername" class="control-label"></label>*@
                <input asp-for="EmployeeUsername" placeholder="Employee Username" class="form-control" />
                <span asp-validation-for="EmployeeUsername" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*k<label asp-for="EmployeeFirstname" class="control-label"></label>*@
                <input asp-for="EmployeeFirstname" placeholder="Employee First Name" class="form-control" />
                <span asp-validation-for="EmployeeFirstname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="EmployeeLastname" class="control-label"></label>*@
                <input asp-for="EmployeeLastname" placeholder="Employee Last Name" class="form-control" />
                <span asp-validation-for="EmployeeLastname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label">Gender:</label>
                <select asp-for="Gender" class="form-control"
                        asp-items="Html.GetEnumSelectList<Gender>()" required></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="EmployeeAddress" class="control-label"></label>*@
                <input asp-for="EmployeeAddress" placeholder="Employee Address"class="form-control" />
                <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmployeeBirthdate" class="control-label">Employee Birthdate:</label>
                <input asp-for="EmployeeBirthdate"  class="form-control" type="date" />
                <span asp-validation-for="EmployeeBirthdate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="EmployeeEmail" class="control-label"></label>*@
                <input asp-for="EmployeeEmail" placeholder="Employee E-mail"class="form-control" />
                <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="ContactNo" class="control-label"></label>*@
                <input asp-for="ContactNo" placeholder="Employee Contact No."class="form-control" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
        @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-5">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="IndexSE" class="btn btn-outline-success">Back to List</a>
            </div>
        </form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
