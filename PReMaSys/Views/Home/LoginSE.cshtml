<form class="login-form" asp-action="LoginSE">
     <div class="login-header">
        <h1>@ViewData["Title"]</h1>
        <p>Sign in and start managing your employees!</p>
    </div>
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <div class="input-container mb-3 mt-5">
        <div class="dropdown">
  <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Pick a Role:
  </button>
  <ul class="dropdown-menu">
     <li><a class="dropdown-item" asp-action="Login" asp-controller="Home">Domain</a></li>
    <li><a class="dropdown-item" asp-action="LoginSA" asp-controller="Home">Support Admin</a></li>
    <li><a class="dropdown-item" asp-action="LoginAdmin" asp-controller="Home">Admin</a></li>
    <li><a class="dropdown-item" asp-action="LoginSE" asp-controller="Home">Sales Employee</a></li>
  </ul>
</div>
     </div>
     <div class="input-container mb-3">
        <input asp-for="EmployeeEmail" placeholder="Email" class="form-control" />
        <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
     </div>
     <div class="input-container mb-3">
        <input asp-for="Password" placeholder="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
     </div>
     <div class="form-group b-3">
        <input type="checkbox" checked="checked" name="remember"> Remember me
     </div>
     <button type="submit" class="btn btn-success form-btn mt-3">Login</button>
 </form>
  

