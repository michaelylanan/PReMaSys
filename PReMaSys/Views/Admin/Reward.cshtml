@model IEnumerable<PReMaSys.Models.Rewards>

@{
    ViewData["Title"] = "Reward";
    Layout = "~/Views/Shared/_LayoutLoggedin.cshtml";
}

<h1 class="text-center mt-5 mb-5">Reward</h1>
<div class="table-responsive">
<table class="table table-hover" id="rewardsrecords">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointsCost)
            </th>
        </tr>
    </thead>
    <tbody>
         @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" style="color:red; font-family:'Franklin Gothic Book'"> No rows match the Search Criteria!</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img style="height:2em" src="@Url.Content(item.Picture)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RewardName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RewardCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointsCost)
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>"
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
    $('#rewardsrecords').DataTable();
});
</script>
</div>

<a class="notificationback-link btn btn-outline-success p-2 " href="AdminDashboard" type="button">Back</a>
