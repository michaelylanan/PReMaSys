@model SalesPerformance
@inject PReMaSys.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Edit Sales Performance Record";

    var employeeList = _context.SERecord.ToList();
}

<h2 class="text-center mt-5 mb-5">Update Sales Performance</h2>
<hr/>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="SalesID" />

    <div class="form-group mb-2 mt-2">
        <select asp-for="SalesPerson" class="form-select form-select" aria-label=".form-select example" required
                asp-items="@(new SelectList(employeeList,"EmployeeNo", "EmployeeFirstname"))">
            <option value="">Select a Sales Person...</option>
        </select>
        <span asp-validation-for="SalesPerson" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="UnitsSold" class="control-label"></label>
        <input asp-for="UnitsSold" class="form-control" />
        <span asp-validation-for="UnitsSold" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="UnitType" class="control-label"></label>
        <input asp-for="UnitType" class="form-control" />
        <span asp-validation-for="UnitType" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="Particulars" class="control-label"></label>
        <input asp-for="Particulars" class="form-control" />
        <span asp-validation-for="Particulars" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="CostPricePerUnit" class="control-label"></label>
        <input asp-for="CostPricePerUnit" class="form-control" />
        <span asp-validation-for="CostPricePerUnit" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="SellingPricePerUnit" class="control-label"></label>
        <input asp-for="SellingPricePerUnit" class="form-control" />
        <span asp-validation-for="SellingPricePerUnit" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="SalesVolume" class="control-label">Sales Volume</label>
        <input asp-for="SalesVolume" class="form-control" />
        <span asp-validation-for="SalesVolume" class="text-danger"></span>
    </div>

    <div class="form-group  mb-2">
        <label asp-for="ConversionR" class="control-label">Conversion Rate</label>
        <input asp-for="ConversionR" class="form-control" />
        <span asp-validation-for="ConversionR" class="text-danger"></span>
    </div>

    <div class="form-group  mb-2">
        <label asp-for="AverageDealSize" class="control-label">Average Deal Size</label>
        <input asp-for="AverageDealSize" class="form-control" />
        <span asp-validation-for="AverageDealSize" class="text-danger"></span>
    </div>

    <div class="form-group  mb-2">
        <label asp-for="CustomerAcquisition" class="control-label">Customer Acquisition</label>
        <input asp-for="CustomerAcquisition" class="form-control" />
        <span asp-validation-for="CustomerAcquisition" class="text-danger"></span>
    </div>

    <div class="form-group  mb-2">
        <label asp-for="CustomerRetentionR" class="control-label">Customer Retention Rate</label>
        <input asp-for="CustomerRetentionR" class="form-control" />
        <span asp-validation-for="CustomerRetentionR" class="text-danger"></span>
    </div>
    <div class="form-group mt-3 mb-3">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="SPerformanceList" class="btn btn-outline-success">Back to List</a>
    </div>
</form>
