@inject PReMaSys.Data.ApplicationDbContext _context

@model PReMaSys.Models.SalesPerformance

@{
    ViewData["Title"] = "SalesPerformance";
     Layout = "~/Views/Shared/_LayoutLoggedin.cshtml";
    var employeeList = _context.SERecord.ToList();
}
<h1 class="mt-5 text-center mb-5">Sales Performance</h1> 
 <div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col d-flex justify-content-center">
    <div class="card border-success text-center w-75">
      <img src="~/img/sales.png" class="img-fluid card-img-top" alt="...">  @*style="width:90%; height:250px"*@
      <div class="card-body">
        <h5 class="card-title">Sales Revenue</h5>
        <p class="card-text">It is the total amount of money generated from the sale of goods/services made in a specific timeframe.</p>
      </div>
      <ul class="list-group list-group-flush">
       <li class="list-group-item">Formula: SR = Quantity x Selling Price/unit</li>
      </ul>
    </div>
  </div>
  <div class="col d-flex justify-content-center">
    <div class="card border-success text-center  w-75">
      <img src="~/img/profits.png" class="img-fluid card-img-top ms-3"  alt="..."> @*style="width:90%; height:230px"*@
      <div class="card-body">
        <h5 class="card-title">Gross Profit</h5>
        <p class="card-text">It is the difference between sales revenue and cost of good sold (COGS). This represents the amount of funds generated by a company.</p>
      </div>
       <ul class="list-group list-group-flush">
       <li class="list-group-item">Formula: GP = SR - COGS</li>
      </ul>
    </div>
  </div>
  <div class="col d-flex justify-content-center">
    <div class="card border-success text-center  w-75">
      <img src="~/img/sold.png" class="img-fluid card-img-top"  alt="..."> @*style="width:90%; height:280px"*@
      <div class="card-body">
        <h5 class="card-title">Sales Volume/Units Sold</h5>
        <p class="card-text">Refers to the total number of units of goods / services sold.</p>
      </div>
    </div>
  </div>
  <div class="col d-flex justify-content-center">
    <div class="card  border-success text-center  w-75">
      <img src="~/img/averagedeal.png" class="img-fluid card-img-top "  alt="...">  @*style="width:90%; height:250px"*@
      <div class="card-body">
        <h5 class="card-title">Average Deal Size</h5>
        <p class="card-text">It is the average monetary value or size of individual sales transactions or deals closed by an employee over a specific time frame.</p>
      </div>
       <ul class="list-group list-group-flush">
       <li class="list-group-item">Formula: ADS = Total Sales Revenue/Number of sales transactions</li>
      </ul>
    </div>
  </div>
   <div class="col d-flex justify-content-center">
    <div class="card  border-success text-center  w-75">
      <img src="~/img/asset-management.png"class="img-fluid card card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Customer Acquisition</h5>
        <p class="card-text">It is the total number of new customers/accounts brough in by an employee within a specific period.</p>
      </div>
    </div>
  </div>
   <div class="col d-flex justify-content-center">
    <div class="card  border-success text-center  w-75">
      <img src="~/img/Retention.png" class="img-fluid card card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Customer Retention </h5>
        <p class="card-text">It is the ability to retain existing customers over a specific time frame. </p>
      </div>
         <ul class="list-group list-group-flush">
       <li class="list-group-item">Formula: ADS = CR = (Retained  Customers/ Total Customers) *100</li>
      </ul>
    </div>
  </div>
   <div class="col  d-flex justify-content-center">
    <div class="card  border-success text-center  w-75">
      <img src="..." class="img-fluid card card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
    </div>
  </div>
</div>


 

<!--<h4>SalesPerformance</h4>-->

<hr />

        <form asp-action="SalesPerformance" class="sp-form mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <select asp-for="SalesPerson" class="form-select form-select" aria-label=".form-select example" required
                        asp-items="@(new SelectList(employeeList,"EmployeeNo", "EmployeeFirstname"))">
                    <option value="">Select a Sales Person...</option>
                </select>
                <span asp-validation-for="SalesPerson" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
              @*  <label asp-for="UnitsSold" class="control-label"></label>*@
                <input asp-for="UnitsSold" placeholder="Units Sold" class="form-control" />
                <span asp-validation-for="UnitsSold" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
               @* <label asp-for="UnitType" class="control-label"></label>*@
                <input asp-for="UnitType"  placeholder="Units Type" class="form-control" />
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
               @* <label asp-for="Particulars" class="control-label"></label>*@
                <input asp-for="Particulars"  placeholder="Particular" class="form-control" />
                <span asp-validation-for="Particulars" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="CostPricePerUnit" class="control-label"></label>*@
                <input asp-for="CostPricePerUnit"  placeholder="Cost Per Unit" class="form-control" />
                <span asp-validation-for="CostPricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="SellingPricePerUnit" class="control-label"></label>*@
                <input asp-for="SellingPricePerUnit"  placeholder="Selling Price Unit" class="form-control" />
                <span asp-validation-for="SellingPricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="ConversionR" class="control-label"></label>*@
                <input asp-for="ConversionR"  placeholder="Conversion Retention" class="form-control" />
                <span asp-validation-for="ConversionR" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="AverageDealSize" class="control-label"></label>*@
                <input asp-for="AverageDealSize"  placeholder="Average Deal Size" class="form-control" />
                <span asp-validation-for="AverageDealSize" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="CustomerAcquisition" class="control-label"></label>*@
                <input asp-for="CustomerAcquisition"  placeholder="Customer Acquisition" class="form-control" />
                <span asp-validation-for="CustomerAcquisition" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="CustomerRetentionR" class="control-label"></label>*@
                <input asp-for="CustomerRetentionR"  placeholder="Customer Retention Rate" class="form-control" />
                <span asp-validation-for="CustomerRetentionR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="mb-3 mt-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="SPerformanceList"  class="btn btn-outline-success">Back to List</a>
               </div>
            </div>
        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
