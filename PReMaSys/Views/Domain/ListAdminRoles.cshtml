@model IEnumerable<Testertest.Data.ApplicationUser>
@{
    ViewData["Title"] = "ListAdminRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Account and Roles</h1>

<a asp-action="AddRole" asp-controller="Domain"
   class="btn btn-success mb-3">Add new Admin</a>

<a asp-action="AdminAllRoles" asp-controller="Domain"
   class="btn btn-success mb-3">Assign Role</a>

@if (Model.Any()){
    foreach(var user in Model){
        <div class="card">
            <div class="card-header">
                User Id :@user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteAdminAccount" asp-route-id="@user.Id" method="post">
                    <a asp-controller="Domain" asp-action="EditAdminRole" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                
            </div>
        </div>
    }
}

