@model Testertest.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "Create New Role";

    <h1>Add Role</h1>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddRoles" method="post" class="mt-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="col-1 col-form-label"></label>
                    <div>
                        <input asp-for="RoleName" class="form-control" placeholder="Name">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-4">
                    <button type="submit" class="btn btn-primary">Add Role</button>
                    <div>
                        <a asp-action="ListAllRoles" class="btn btn-warning my-3"><i class="fa-solid fa-angles-left"></i>Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


}