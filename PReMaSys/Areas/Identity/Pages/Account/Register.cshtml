@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex whole-register-form align-items-center justify-content-center" style="min-height:calc(100vh - 105px)">
    <div class="d-flex form-register">
    <img src="~/img/registerimage.png" class="login-pic-bg" alt=""/>
        <div class="d-flex align-items-center register-form  w-lg-50 w-100 px-5">
            <form id="registerForm" class="W-100" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <h1>@ViewData["Title"]</h1>
                        <h4>Create a new account.</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.CompanyName" class="form-control" autocomplete="FullName" aria-required="true" />
                            <label asp-for="Input.CompanyName"></label>
                            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" id="my_pass" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <p><input type="checkbox" onclick="myPassword()">Show Password</p>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" id="my_pass2" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                              <p><input type="checkbox" onclick="myPassword2()">Show Password</p>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success mb-3">Register</button>
                    </div>
                    <div class="col-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mt-5">
                            <label asp-for="Input.Pic" style="width: 100%;"></label>
                            <img id="imgPicture" style="width:250px;height:250px; object-fit:cover" class="mr-5" src="">
                            <input type="file"
                                   accept=".png,.jpg,.jpeg"
                                   asp-for="Input.Pic"
                                   class="form-control"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('imgPicture').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="Input.Pic" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function myPassword() {
  var x = document.getElementById("my_pass");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}

function myPassword2() {
  var x = document.getElementById("my_pass2");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
